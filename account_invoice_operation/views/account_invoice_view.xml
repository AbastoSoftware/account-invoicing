                <field name="account_id" position="after">
                    <label for="operation_ids"/>
                    <div>
                        <field name="operation_ids" widget="one2many_tags" context="{'journal_type': journal_type}"/>
                        <button name="%(action_invoice_operation_wizard)d" type="action" string="Load Plan" class="oe_link oe_line"/>
                    </div>
                </field>
                <button name="invoice_open" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'draft'), ('operation_ids', '!=', [])]}</attribute>
                    <attribute name="states"></attribute>
                </button>
                <button name="invoice_open" position="after">
                    <button name="action_choose_plan" groups="base.group_user" string="Choose Plan" type="object" attrs="{'invisible':['|', ('state','not in',['draft']), ('operation_ids','!=',[])]}"/>
                    <button name="action_run_operations" groups="base.group_user" string="Run Operations" type="object" attrs="{'invisible':['|', ('state','not in',['draft']), ('operation_ids','=',[])]}"/>
                </button>
            </field>
        </record>
    </data>
</openerp>
